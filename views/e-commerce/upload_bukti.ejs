<%- include('../partials/header'); -%>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="row">
                  <blockquote class="blockquote mb-0">
                      <span><strong>Konfirmasi dan Upload Bukti Pembayaran</strong></span></br>           
                  </blockquote>
              </div>
              <div class="row mt-3">
                <form action="" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Sumber transfer</label>
                      <select class="form-select" aria-label="Default select example">
                        <option selected></option>
                        <option value="1">Transfer Bank</option>
                        <option value="2">E-Wallet</option>
                        <option value="3">Gerai(Alfamart, Indomaret, dll)</option>
                        <option value="4">Lainnya</option>
                      </select>                        
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Tujuan Pembayaran</label>
                        <select class="form-select" aria-label="Default select example">
                          <option selected></option>
                          <option value="1">BCA</option>
                          <option value="2">Mandiri</option>
                          <option value="3">QRIS</option>
                        </select>                        
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Nominal Pembayaran</label>
                        <input type="number" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Nama Pemilik Rekening</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Tanggal Pembayaran</label>
                        <div class="input-group date" id="datepicker">
                          <input type="date" id="date" name="date" class="form-control">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="customFile">Upload Bukti</label>
                        <input type="file" class="form-control" name="upload_bukti_bayar" accept=".jpg, .jpeg, .png"/>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="button" style="background-color: #29c6cd; border: #29c6cd;" class="btn btn-primary btn-lg active" aria-pressed="true">Konfirmasi</button>
                    </div>
                </form>                     
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <footer class="text-center text-white mb-5">
        <div class="text-center text-dark p-3">
