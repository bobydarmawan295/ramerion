<%- include('atas', {judul: 'Jual Produk'}) %>

    <div class="container d-md-flex align-items-stretch">
      <!-- Page Content  -->
      <div id="content" class="p-4 p-md-5 pt-5">
        <h2 class="mb-4">Mulai Menjual</h2>
        <div class="row">
          <div class="col-12 mb-4 mt-4">
            <form method="post" action="/ecommerce/addProduk" enctype="multipart/form-data">
              <input type="hidden" name="id_penjual" value="<%= id %>">
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Nama Produk</label>
                <div class="form-group d-flex">
                  <div class="icon"><span class="icon-paper-plane"></span></div>
                  <input type="text" class="form-control" name="nama" placeholder="Masukkan Nama Produk Anda" required maxlength="250"/>
                </div>
              </div>
              <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupSelect01">Kategori</label>
                <select class="form-select" name="id_kategori">
                <% kategori.forEach(function(ktgr, index) { %>
                  <option value="<%= ktgr.id %>"><%= ktgr.nama %></option>
                  <% }) %>
                </select>
              </div>
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Deskripsi Produk</label>
                  <div class="form-group d-flex">
                    <div class="icon"><span class="icon-paper-plane"></span></div>
                    <!-- <textarea class="form-control" placeholder="Isi yang memuat konten anda" name="summary" maxlength="250"></textarea> -->
                    <input type="text" class="form-control" name="deskripsi" placeholder="Masukkan keterangan mengenai produk" required/>
                  </div>
              </div>
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Harga(Rupiah)</label>
                  <div class="form-group d-flex">
                    <div class="icon"><span class="icon-paper-plane"></span></div>
                    <input type="number" class="form-control" min="0" max="500000" maxlength="7" name="harga" placeholder="Masukkan Harga yang akan dibeli pelanggan" required/>
                  </div>
              </div>
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Jumlah Stok</label>
                  <div class="form-group d-flex">
                    <div class="icon"><span class="icon-paper-plane"></span></div>
                    <input type="number" class="form-control" min="1" max="500" name="stok" placeholder="Masukkan jumlah stok yang tersedia" required/>
                  </div>
              </div>
              <div class="mb-3">
                <label class="form-label" for="customFile">Masukkan Foto Produk</label>
                <input type="file" class="form-control" name="gambar_produk" accept=".jpg, .jpeg, .png" required/>
              </div>
              <button type="submit" class="btn btn-primary" style="float: right">Post</button>
            </form>
          </div>
        </div>
      </div>

      <%- include('sidebar') %>
    </div>

<%- include('bawah') %>
