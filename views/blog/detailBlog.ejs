<%- include('../partials/header'); -%>
          <!-- /Inner sidebar -->

          <!-- Inner main -->
          <div class="inner-main">
            <!-- Inner main header -->

            <!-- /Inner main header -->

            <!-- Inner main body -->

            <!-- Forum List -->
            <div class="inner-main-body p-2 p-sm-3 collapse forum-content show">
              <!-- Form Tampil Postingan -->
              <div class="card mb-2">
                <div class="card-body p-2 p-sm-3">
                  <div class="media forum-item">
                    <div class="row">
                      <div class="col-12 mb-4 mt-6">
                        <h1><%= items.judul %></h1>
                      </div>
                      <div class="col-auto">
                        <a href="#" data-toggle="collapse" data-target=".forum-content"><img src="https://bootdey.com/img/Content/avatar/avatar1.png" class="mr-3 rounded-circle" width="45" alt="User" /></a>
                      </div>
                      <div class="col-auto">
                        <h5><a href="#" data-toggle="collapse" class="text-body" style="text-decoration: none">Daffa</a></h5>
                        <p class="text-secondary">Sistem Informasi - 20</p></br>
                      </div>
                      <hr /> </br>
                      <div class="col-12 mb-3 mt-1">
                        <p class="komentar">
                          <%= items.konten %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="card mb-2">
                <div class="card-body p-2 p-sm-2">
                  <div class="media forum-item">
                  <div class="row">
                    <div class="col-12 mb-4 mb-6">
                      <h3>Komentar</h3>
                      <form action="/blog/addComment/" method="post"> 
                          <div class="mb-3">
                            <div class="form-floating">
                              <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea" name="komentar"></textarea>
                              <label for="floatingTextarea">Comments</label>
                            </div>
                            <input type="hidden" name="user_id" value="<%= id %>">
                            <input type="hidden" name="blog_id" value="<%= items.id %>">
                          </div>
                          <button style="float: right;" type="submit" class="btn btn-primary">Post</button>
                      </form>
                    </div> 
                  </div>
                  </div>
                </div>
                            
                <% items.komentar_blogs.forEach((data) => { %>
                <div class="card-body border border-primaryv m-2">
                  <h5 class="card-title"><%= nama %></h5>
                  <p class="card-subtitle mb-2 text-muted pb-3"><%= data.created_at %></p>
                  <p class="card-text"><%= data.komentar %></p>
                </div>
                <% }) %>
      
               
             
            </div>

            <!-- Akhir Form Tampil Postingan -->

            <!-- /Inner main body -->
          </div>
          <!-- /Inner main -->
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
   
  </body>
</html>
